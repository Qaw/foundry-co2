{{!log "Chroniques Oubliées | character capacities no paths" this}}
<ol class="features items-container" data-tab="features">
    <li class="items-container-header flexrow">
        <h4 class="item-name flexrow">
            <a data-action="toggleSection" data-toggle-type="paths" data-slug="capacitiesOffPaths">{{localize "CO.ui.capacitiesOffPaths"}}</a>
        </h4>
        <div class="item-controls-2">
            <a class="item-control" data-action="createItem" data-type="capacity" data-tooltip="{{localize 'CO.label.long.add'}}"><i class="fas fa-plus"></i></a>
        </div>
    </li>
    <ol class="item-list foldable {{#if capacitiesOffPathsExpanded}}expanded{{else}}folded{{/if}}">
        {{#each capacitiesOffPaths as |capacity id|}}
            {{!log "Chroniques Oubliées | capacity offPath" capacity}}
            {{#if capacity.system.learned }}
                {{#if (isNull capacity.system.parentCapacity)}}
                    <li class="item flexrow draggable" data-item-uuid="{{capacity.uuid}}" data-item-id="{{capacity._id}}" data-item-type="capacity">
                        <div class="item-name flexrow">
                            <a class="item-img" data-action="editItem" style="background-image: url('{{capacity.img}}')" data-tooltip="{{capacity.system.description}}"></a>
                            <h4>{{capacity.name}}{{#if capacity.system.isSpell}} * {{/if}}</h4>
                        </div>
                        <div class="item-controls-3">
                            <a class="chat" data-action="sendToChat" data-chat-type="item" data-tooltip="{{localize 'CO.label.long.sendToChat'}}"><i class="fas fa-fw fa-comment-alt"></i></a>
                            {{#if ../unlocked}}
                                <a class="edit" data-action="editItem" data-tooltip="{{localize 'CO.label.long.edit'}}"><i class="fas fa-fw fa-edit"></i></a>
                                <a class="item-control" data-action="deleteItem" data-tooltip="{{localize 'CO.ui.remove'}}"><i class="fas fa-trash"></i></a>
                            {{/if}}
                        </div>
                    </li>
                    {{#if capacity.system.allowLinkedCapacity}}
                            <div class="dropzone">
                                <ol class="item-list foldable" data-item-uuid="{{capacity.uuid}}" data-item-id="{{capacity.id}}" data-item-type="capacity">
                                    <li class="item flexrow" {{#if (isNotNull capacity.system.linkedCapacity)}} data-item-uuid="{{capacity.system.linkedCapacity}}" data-item-id="{{capacity._id}}" data-item-type="capacity" {{/if}}>
                                        {{#if (and (isNotNull capacity.system.linkedCapacity) (isNotNull capacity.linkedCapacityItem))}}
                                            <div class="item-name flexrow">                                            
                                                    <a class="item-img" data-action="editItem" style="background-image: url('{{capacity.linkedCapacityImg}}')" data-tooltip="{{capacity.linkedCapacityItem.system.description}}"></a>
                                                    <h4>{{capacity.linkedCapacityItem.name}}{{#if capacity.linkedCapacityItem.system.isSpell}} * {{/if}}{{#if capacity.linkedCapacityItem.system.hasActionType}} ({{capacity.linkedCapacityItem.system.actionTypeShort}}){{/if}}</h4>
                                            </div>
                                            <div class="item-controls-3">
                                                <a class="chat" data-action="sendToChat" data-tooltip="{{localize 'CO.label.long.sendToChat'}}" data-chat-type="item"><i class="fas fa-fw fa-comment-alt"></i></a>
                                                {{#if ../unlocked}}
                                                    <a class="item-control" data-action="deleteItem" data-tooltip="{{localize 'CO.ui.remove'}}"><i class="fas fa-trash"></i></a>
                                                {{/if}}
                                            </div>
                                        {{else}}
                                            <div class="item-name flexrow">                                            
                                                    <a class="item-img" data-action="editItem" style="background-image: url('{{capacity.linkedCapacityImg}}')"></a>
                                                    <h4>{{localize 'CO.ui.addCapacityMsg'}}</h4>
                                            </div>
                                        {{/if}}
                                    </li>
                                </ol>
                            </div>
                    {{/if}}                    
                {{/if}}
            {{/if}}
        {{/each}}
    </ol>
</ol>
